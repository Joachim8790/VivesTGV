@model VivesTGV.Models.HotelsViewModel

@{
    ViewBag.Title = "Hotels";

}

<h2>Hotels</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <h4>WIlt u een nacht in een hotel in @Model.stadNaam boeken?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="row">
                @for (int i = 0; i < Model.hotelID.Count(); i++)
                {

                    <div class="col-sm-6 col-md-4">
                        <div class="thumbnail">

                            <img src=@Model.hotelfoto[i] alt="">
                            <div class="caption">
                                <h3>@Model.hotelnaam[i]</h3>
                                <p>@Model.hoteladres[i]</p>
                                
                                <p>@Html.Label("€" + @Model.prijspernacht[i]) per nacht <input type="submit" name=@i.ToString() value="Toevoegen aan winkelmand" class="btn btn-primary" /></p>
                                @Html.HiddenFor(model => model.hotelID[i])
                                
                            </div>
                            

                        </div>
                    </div>
                    
                }
                @for (int i = 0; i < Model.namen.Count(); i++)
                {
                    @Html.HiddenFor(model => model.namen[i])
                }
                @Html.HiddenFor(model => model.datum);
            </div>
            <div class="col-md-offset-2 col-md-10">
                
            </div>
        </div>
    </div>
                }



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
